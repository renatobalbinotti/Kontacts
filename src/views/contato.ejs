<%- include('includes/head')%> 
<%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou Edite seu contato abaixo:</p>

      <%- include('includes/messages') %>

      <% if (contato._id) { %> 
      <form class="form-contato" action="/contato/edit/<%=contato._id%>" method="post">
      <% } else { %> 
      <form class="form-contato" action="/contato/register" method="post">
      <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
        <div class="form-group">
          <label>Nome</label>
          <input value="<%= contato.nome %>" type="text" name="nome" class="form-control">
        </div>
        <div class="form-group">
          <label>Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" name="sobrenome" class="form-control">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input value="<%= contato.email %>" type="email" name="email" class="form-control">
        </div>
        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contato.telefone %>" type="text" name="telefone" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary mb-2"> Salvar </button>
      </form>  
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
