<%- include('includes/head')%> 
<%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos:</p>

      <%- include('includes/messages') %>

      <% if (contatos.length > 0 && user) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <tr>
            <td>Nome</td>
            <td>Sobrenome</td>
            <td>Telefone</td>
            <td>Email</td>
            <td></td>
            <td></td>
          </tr>
          <% contatos.forEach(contato => { %>    
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.sobrenome %></td>
            <td><%= contato.telefone.replace(/(\d{2})(\d{1})(\d{4})(\d{4})/, '($1) $2 $3-$4') %></td>
            <td><%= contato.email %></td> 
            <td><a href="/contato/<%= contato._id %>">Editar</td>
            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</td>
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">NÃ£o existem contatos na sua agenda.</p>
      <% } %>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
